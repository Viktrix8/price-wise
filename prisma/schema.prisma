// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
    id           Int      @id @default(autoincrement())
    title        String
    description  String?
    price        Int
    stockStatus  String
    isInSale     Boolean
    originalPrice Int?
    url          String
    highestPrice Int
    lowestPrice  Int
    createdAt    DateTime @default(now())
    productImageUrl String
    rating      Float
    ratingCount Int
}
